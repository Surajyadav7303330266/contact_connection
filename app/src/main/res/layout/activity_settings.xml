                        android:paddingRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Thu : "
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:id="@+id/thuam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:maxLength="5"
                        android:background="@color/white"
                        android:textSize="23dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="8dp"/>
                    <EditText
                        android:id="@+id/thupm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:maxLength="5"
                        android:background="@color/white"
                        android:textSize="23dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Fri : "
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:id="@+id/friam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:maxLength="5"
                        android:background="@color/white"
                        android:textSize="23dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="8dp"/>
                    <EditText
                        android:id="@+id/fripm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:maxLength="5"
                        android:background="@color/white"
                        android:textSize="23dp"
