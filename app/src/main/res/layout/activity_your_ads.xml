<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourAdsActivity"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE : You can put only 1 ad at a time,If you will try to put another ad, then the previous one will be replaced with the new one."
        android:textStyle="bold"
        android:textColor="#000"
        android:background="#ff00ff"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/youradbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to upload Ad"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="25dp"/>
</LinearLayout>